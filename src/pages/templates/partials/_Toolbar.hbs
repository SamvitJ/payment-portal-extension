<nav class="content-header">
  <span>Rules</span>
  <div class="right right-corner-icongroup">

    <a href="#selectRule" class="btn-floating btn-small btn-success waves-effect waves-light select-rule-button action-button">
      <i class="fa fa-plus"></i>
    </a>

    {{#gt rules.length 0}}
      <a class="btn-floating btn-small waves-effect waves-light blue export-rules-button action-button"
         data-toggle="tooltip" data-placement="bottom" data-original-title="Download Rules">
        <i class="fa fa-download"></i>
      </a>
    {{/gt}}

    <a class="btn-floating btn-small waves-effect waves-light blue import-rules-button action-button"
       data-toggle="tooltip" data-placement="bottom" data-original-title="Upload Rules">
      <i class="fa fa-upload"></i>
    </a>

    <a class="btn-floating btn-small waves-effect waves-light blue remove-rules-button action-button"
       data-toggle="tooltip" data-placement="bottom" data-original-title="Remove Selected Rules">
      <i class="fa fa-trash"></i>
    </a>

    <a class="btn-floating btn-small waves-effect waves-light share-rules-button action-button"
       data-toggle="tooltip" data-placement="bottom" data-original-title="Share">
      <i class="fa fa-share-alt"></i>
    </a>

    {{!--
    Comment: Show this when we want to show dropdown with "Settings, Logout/Login" options when User clicks on User Icon.
    {{#if user.isLoggedIn}}
      <button class="btn-floating btn-small waves-effect waves-light action-button avatar">
        <img src="{{user.profile.profileImageURL}}" class="img-circle img-responsive profile-pic">
      </button>
    {{else}}
      <button class="btn-floating btn-small waves-effect waves-light login-button action-button">
        <i class="fa fa-user"></i>
      </button>
    {{/if}}
    --}}
  </div>
</nav>
