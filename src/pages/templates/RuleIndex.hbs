{{> Toolbar}}

<section class="content-body">
  <table class="table">
    <thead>
    <tr>
      <th class="rule-selection-cell">
        <input type="checkbox" class="filled-in select-all-rules-checkbox" id="select-all-rules-checkbox" title="Select All"/>
        <label for="select-all-rules-checkbox"></label>
      </th>
      <th> <span class="rules-number badge">{{ rules.length }}</span> </th>
      <th>Name & Description</th>
      <th class="status-cell">Status</th>
      <th>Created on</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each rules}}
      {{> RuleItemRow }}
    {{/each}}
    </tbody>
  </table>
</section>
